#!/bin/bash

declare -a PIDS

function kill_pids()
{
  for PID in ${PIDS[@]}; do
    kill ${PID}
  done
}

trap "kill_pids" EXIT

# configure marble mouse
~/.xinitrc.d/xinput.sh

# load custom keymap
xkbcomp -I${HOME}/.xkb ${HOME}/.xkb/keymap/default $DISPLAY

# hides mouse cursor on kbd events
xbanish &
PIDS+=($!)

# run xautolock
xautolock -locker 'xlock -dpmsoff 5' &
PIDS+=($!)

# start the wm
openbox

# kill all leftover processes started by this script
pkill -P $$
